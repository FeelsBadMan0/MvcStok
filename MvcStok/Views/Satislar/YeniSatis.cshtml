@model MvcStok.Models.Entity.tblsatislar
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Satış Paneli</h2>

<br />
<form method="post">
    @Html.LabelFor(x => x.tblurunler.id, "Ürün")
    @Html.DropDownListFor(x => x.tblurunler.id, (List<SelectListItem>)ViewBag.deger1, "Bir Ürün Seçin", new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.tblpersonel.id, "Personel")
    @Html.DropDownListFor(x => x.tblpersonel.id, (List<SelectListItem>)ViewBag.deger3, "Bir Personel Seçin", new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.tblmusteri.id, "Müşteri")
    @Html.DropDownListFor(x => x.tblmusteri.id, (List<SelectListItem>)ViewBag.deger2, "Bir Müşteri Seçin", new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.fiyat, "Fiyat")
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    <br />
    <button type="submit" class="btn btn-info">Satış Yap</button>

</form>


